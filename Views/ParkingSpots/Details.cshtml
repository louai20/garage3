@model garage3.Models.ParkingSpotViewModel

@{
    ViewData["Title"] = $"Parking Spot Details - {Model.SpotNumber}";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0 title">@ViewData["Title"]</h1>
        <a asp-action="Search" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Search
        </a>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Parking Spot Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Spot Number</dt>
                        <dd class="col-sm-8">@Model.SpotNumber</dd>

                        <dt class="col-sm-4">Size</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@(Model.Size switch { 1 => "success", 2 => "success", 3 => "warning", 4 => "warning", 5 => "warning", 6 => "danger", 7 => "danger", 8 => "danger", 9 => "danger", 10 => "danger", 11 => "success", 12 => "success", 13 => "warning", 14 => "warning", 15 => "warning", 16 => "danger", 17 => "danger", 18 => "danger", 19 => "danger", 20 => "danger", _ => "secondary"})">
                                @Model.SizeName
                            </span>
                        </dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsAdminReserved)
                            {
                                <span class="badge bg-warning text-dark">Admin Reserved</span>
                                @if (!string.IsNullOrEmpty(Model.ReservedReason))
                                {
                                    <br /><small class="text-muted">@Model.ReservedReason</small>
                                }
                            }
                            else if (Model.IsAvailable)
                            {
                                <span class="badge bg-success">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Occupied</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Vehicle Types Allowed</dt>
                        <dd class="col-sm-8">@Model.VehicleTypesAllowed</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            @if (!Model.IsAvailable && !Model.IsAdminReserved)
            {
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">Parked Vehicle Details</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Registration Number</dt>
                            <dd class="col-sm-8"><strong>@Model.RegistrationNumber</strong></dd>

                            <dt class="col-sm-4">Vehicle Type</dt>
                            <dd class="col-sm-8">@Model.VehicleTypeName</dd>

                            <dt class="col-sm-4">Manufacturer</dt>
                            <dd class="col-sm-8">@Model.Manufacturer</dd>

                            <dt class="col-sm-4">Model</dt>
                            <dd class="col-sm-8">@Model.Model</dd>

                            <dt class="col-sm-4">Color</dt>
                            <dd class="col-sm-8">@Model.Color</dd>

                            <dt class="col-sm-4">Check-in Time</dt>
                            <dd class="col-sm-8">@Model.CheckInTime?.ToString("g")</dd>
                        </dl>
                    </div>
                </div>
            }
            else if (Model.IsAvailable)
            {
                <div class="alert alert-success">
                    <i class="bi bi-check-circle"></i> This spot is available for parking.
                </div>
                <a asp-controller="ParkedVehicles" asp-action="Create" asp-route-parkingSpotId="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-car-front"></i> Park Vehicle Here
                </a>
            }
            else if (Model.IsAdminReserved)
            {
                <div class="alert alert-warning">
                    <i class="bi bi-lock"></i> This spot is reserved by admin.
                </div>
            }
        </div>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <div class="mt-4">
            <h5>Admin Actions</h5>
            @if (Model.IsAdminReserved)
            {
                <form asp-action="Reserve" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-outline-warning">
                        <i class="bi bi-unlock"></i> Unreserve
                    </button>
                </form>
            }
            else
            {
                <a href="#" onclick="reserveWithReason(@Model.Id)" class="btn btn-outline-warning">
                    <i class="bi bi-lock"></i> Reserve
                </a>
            }
        </div>

        <!-- Modal for reservation reason -->
        <div class="modal fade" id="reserveModal" tabindex="-1" aria-labelledby="reserveModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="reserveModalLabel">Reserve Parking Spot</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="reserveForm" method="post" action="@Url.Action("Reserve", "ParkingSpots")">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" id="reserveSpotId" value="@Model.Id" />
                            <div class="mb-3">
                                <label for="reservedReason" class="form-label">Reservation Reason (Optional)</label>
                                <input type="text" class="form-control" id="reservedReason" name="reservedReason" placeholder="Enter reason or leave empty">
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-warning" onclick="submitReservation()">Reserve</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @if (User.IsInRole("Admin"))
    {
        <script>
            function reserveWithReason(spotId) {
                document.getElementById('reserveSpotId').value = spotId;
                document.getElementById('reservedReason').value = '';
                new bootstrap.Modal(document.getElementById('reserveModal')).show();
            }
            
            function submitReservation() {
                document.getElementById('reserveForm').submit();
            }
        </script>
    }
}
