@model garage3.Data.VehicleType

@{
    ViewData["Title"] = "Edit Vehicle Type";
}

<h1>Edit Vehicle Type</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Size" class="control-label"></label>
                <input asp-for="Size" class="form-control" type="number" min="1" />
                <span asp-validation-for="Size" class="text-danger"></span>
                <small class="form-text text-muted">Size determines which parking spots can accommodate this vehicle type.</small>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Return to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
