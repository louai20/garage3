@model garage3.Data.VehicleType

@{
    ViewData["Title"] = "Delete Vehicle Type";
}

<h1>Delete Vehicle Type</h1>

<h3 class="text-danger">Are you sure you want to delete this vehicle type?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
