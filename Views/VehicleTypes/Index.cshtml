@model IEnumerable<garage3.Data.VehicleType>

@{
    ViewData["Title"] = "Vehicle Types";
}

@if (TempData["SuccessMessage"] is string success)
{
    <div class="alert alert-success alert-dismissible fade show">
        @success
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] is string error)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @error
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<h1>Vehicle Types</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mt-3 mb-3">Add Vehicle Type</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Size</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Size</td>
                <td class="text-nowrap">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
