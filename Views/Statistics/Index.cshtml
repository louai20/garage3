@model garage3.Models.GarageStatsVm

@{
    ViewData["Title"] = "Statistics";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="mb-0">Garage Statistics</h1>
        <div class="text-muted">Overview of availability, parked vehicles and booked spots</div>
    </div>
</div>

<!-- Top KPI cards -->
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card h-100 border-success">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h6 class="text-muted mb-1">Available</h6>
                        <div class="display-6">@Model.FreeSpots</div>
                    </div>
                    <span class="badge text-bg-success">Free</span>
                </div>
                <div class="text-muted mt-2">Spots available right now.</div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 border-danger">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h6 class="text-muted mb-1">Parked</h6>
                        <div class="display-6">@Model.ParkedSpotNumbers.Count</div>
                    </div>
                    <span class="badge text-bg-danger">Parked</span>
                </div>
                <div class="text-muted mt-2">Spots occupied by active parkings.</div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 border-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h6 class="text-muted mb-1">Booked</h6>
                        <div class="display-6">@Model.BookedSpotNumbers.Count</div>
                    </div>
                    <span class="badge text-bg-warning">Booked</span>
                </div>
                <div class="text-muted mt-2">Admin reserved spots without a vehicle.</div>
            </div>
        </div>
    </div>
</div>

<!-- Overview + By size -->
<div class="row g-3 mb-4">
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title mb-3">Overview</h5>

                <div class="d-flex justify-content-between border-bottom py-2">
                    <span class="text-muted">Total spots</span>
                    <strong>@Model.TotalSpots</strong>
                </div>
                <div class="d-flex justify-content-between border-bottom py-2">
                    <span class="text-muted">Occupied (parked + booked)</span>
                    <strong>@Model.OccupiedSpots</strong>
                </div>
                <div class="d-flex justify-content-between py-2">
                    <span class="text-muted">Available</span>
                    <strong>@Model.FreeSpots</strong>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title mb-3">By size</h5>

                @if (!Model.SizeStats.Any())
                {
                    <p class="mb-0"><em>No size data available.</em></p>
                }
                else
                {
                    @foreach (var s in Model.SizeStats.OrderBy(x => x.Size))
                    {
                        <div class="mb-3">
                            <div class="d-flex justify-content-between">
                                <strong>Size @s.Size</strong>
                                <span class="text-muted">@s.Occupied / @s.Total occupied</span>
                            </div>

                            <div class="progress" role="progressbar" aria-label="Size @s.Size">
                                <div class="progress-bar"
                                     style="width:@(s.Total == 0 ? 0 : (s.Occupied * 100 / s.Total))%"></div>
                            </div>

                            <div class="text-muted small mt-1">Available: @s.Free</div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

<!-- Lists -->
<div class="row g-3">
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Available spots</h5>
                <div class="text-muted mb-2">Spot numbers</div>

                @if (!Model.FreeSpotNumbers.Any())
                {
                    <p class="mb-0"><em>No available parking spots.</em></p>
                }
                else
                {
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var n in Model.FreeSpotNumbers.OrderBy(x => x))
                        {
                            <span class="badge text-bg-success">@n</span>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Parked</h5>
                <div class="text-muted mb-2">Active parkings (spot numbers)</div>

                @if (!Model.ParkedSpotNumbers.Any())
                {
                    <p class="mb-0"><em>No parked vehicles.</em></p>
                }
                else
                {
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var n in Model.ParkedSpotNumbers.OrderBy(x => x))
                        {
                            <span class="badge text-bg-danger">@n</span>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Booked</h5>
                <div class="text-muted mb-2">Admin reserved (spot numbers)</div>

                @if (!Model.BookedSpotNumbers.Any())
                {
                    <p class="mb-0"><em>No booked spots.</em></p>
                }
                else
                {
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var n in Model.BookedSpotNumbers.OrderBy(x => x))
                        {
                            <span class="badge text-bg-warning">@n</span>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
