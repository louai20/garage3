@model IEnumerable<garage3.Data.ParkingSpot>


@if (TempData["SuccessMessage"] is string success) {
    <div class="alert alert-success alert-dismissible fade show">
        @success
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] is string error) {
    <div class="alert alert-danger alert-dismissible fade show">
        @error
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@{
    ViewData["Title"] = "Parking Spots";
}

<h1>Parking Spots</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mt-3 mb-3">Add Parking Spot</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Spot No.</th>
            <th>Size</th>
            <th>Booking</th>
            <th>Occupancy</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            var occupied = item.Parkings.Any(p => p.CheckOutTime == null);

            <tr>
                <td>@item.SpotNumber</td>
                <td>@item.Size</td>
                <td>
                    @if (item.IsBooked) {
                        <span class="badge text-bg-warning">Booked</span>
                    } else {
                        <span class="badge text-bg-success">Available</span>
                    }
                </td>
                <td>
                    @if (occupied) {
                        <span class="badge text-bg-danger">Occupied</span>
                    } else {
                        <span class="badge text-bg-success">Vacant</span>
                    }
                </td>
                <td class="text-nowrap">

                    @if (!occupied) {
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                     @if (!occupied) {
                    <form asp-action="Delete" asp-route-id="@item.Id"
                          method="post" class="d-inline"
                          onsubmit="return confirm('Are you sure you want to delete this parking spot?');">
                        <input type="hidden" name="id" value="@item.Id" />
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-outline-danger">
                            Delete
                        </button>
                    </form>
        }
                </td>
            </tr>
        }
    </tbody>
</table>
