@model garage3.Data.ParkingSpot

@{
    ViewData["Title"] = "Edit Parking Spot";
    var vehicleTypes = ViewBag.VehicleTypes as List<garage3.Data.VehicleType>;
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h1 class="mb-0">Edit parking spot</h1>
        <div class="text-muted">Update spot number, size and booking status.</div>
    </div>

    <a asp-action="Index" class="btn btn-outline-secondary">
        Back to list
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Edit" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

            <input type="hidden" asp-for="Id" />

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="SpotNumber" class="form-label">Spot No.</label>
                    <input asp-for="SpotNumber" class="form-control" />
                    <span asp-validation-for="SpotNumber" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Vehicle Type</label>
                    <select id="vehicleTypeSelect" class="form-control">
                        <option value="">-- Select Vehicle Type --</option>
                        @if (vehicleTypes != null)
                        {
                            foreach (var vt in vehicleTypes)
                            {
                                if (Model.Size == vt.Size)
                                {
                                    <option value="@vt.Size" data-size="@vt.Size" selected="selected">@vt.Name (Size: @vt.Size)</option>
                                }
                                else
                                {
                                    <option value="@vt.Size" data-size="@vt.Size">@vt.Name (Size: @vt.Size)</option>
                                }
                            }
                        }
                    </select>
                </div>

                <div class="col-md-6">
                    <label asp-for="Size" class="form-label">Size</label>
                    <input asp-for="Size" class="form-control" id="sizeInput" />
                    <span asp-validation-for="Size" class="text-danger"></span>
                    <div class="form-text">Example: 1 = Small, 2 = Medium, 3 = Large</div>
                </div>

       

                <div class="col-12 d-flex gap-2 mt-2">
                    <button type="submit" class="btn btn-primary">Save changes</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById('vehicleTypeSelect').addEventListener('change', function() {
            var sizeInput = document.getElementById('sizeInput');
            var selectedOption = this.options[this.selectedIndex];
            if (selectedOption.value) {
                sizeInput.value = selectedOption.getAttribute('data-size');
            } else {
                sizeInput.value = '';
            }
        });
    </script>
}
