@model IEnumerable<garage3.Models.MemberOverviewVm>

@{
    ViewData["Title"] = "Members";
}

<h1>Members</h1>
<p class="text-muted">Overview of members, their vehicles and active parking costs</p>

<!-- Alerts -->
@if (TempData["SuccessMessage"] is string success)
{
    <div class="alert alert-success alert-dismissible fade show">
        @success
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] is string error)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @error
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Add New Member button -->
<p>
    <a asp-action="Create" class="btn btn-primary mt-3 mb-3">Add New Member</a>
</p>

<!-- Search -->
<form asp-action="Index" method="get" class="row g-2 mb-3">
    <div class="col-md-9"> <input type="text" name="search" value="@Context.Request.Query["search"]"
            class="form-control" placeholder="Search by name or personal number" /> </div>
    <div class="col-md-3 d-flex gap-2"> <button class="btn btn-primary w-100" type="submit"> <i
                class="bi bi-search"></i> Search </button> <a asp-action="Index"
            class="btn btn-outline-secondary w-100"> <i class="bi bi-x-circle"></i> Reset </a> </div>
</form>

<!-- Members table -->
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="text-start" style="width: 30%;">Full Name</th>
            <th class="text-start">Personal Number</th>
            <th class="text-center">Role</th>
            <th class="text-center">Membership</th>
            <th class="text-center">Vehicles</th>
            <th class="text-end">Active Parking Cost</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td class="text-start">@user.FullName</td>
                <td class="text-start">@user.PersonalNumber</td>
                <td class="text-center">
                    @if (user.Role == "Admin")
                    {
                        <span class="badge text-bg-danger">@user.Role</span>
                    }
                    else if (user.Role == "Member")
                    {
                        <span class="badge text-bg-info">@user.Role</span>
                    }
                </td>
                <td class="text-center">
                    @if (user.MembershipType == "Pro") //Or any other membership type
                    {
                        <span class="badge text-bg-success">@user.MembershipType</span>
                    }
                    else
                    {
                        <span class="badge text-bg-info">@user.MembershipType</span>
                    }
                </td>
                <td class="text-center">@user.VehicleCount</td>
                <td class="text-end">@user.ActiveParkingCost.ToString("0.00") SEK</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-primary">Details</a>
                    <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@user.UserId" method="post" class="d-inline"
                        onsubmit="return confirm('Are you sure you want to delete this member?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info mt-3">
        No members found.
    </div>
}

<!-- Pagination -->
@if (ViewBag.TotalPages != null && ViewBag.TotalPages > 1)
{
    <nav aria-label="Page navigation" class="mt-3">
        <ul class="pagination justify-content-center">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)"
                    asp-route-search="@ViewBag.Search">
                    Previous
                </a>
            </li>

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-search="@ViewBag.Search">@i</a>
                </li>
            }

            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)"
                    asp-route-search="@ViewBag.Search">
                    Next
                </a>
            </li>
        </ul>
    </nav>
}