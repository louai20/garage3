@model garage3.Models.MemberDetailsVm

@{
    ViewData["Title"] = "Edit Member Details";
}

<h1>@Model.FullName</h1>
<p class="text-muted">Edit member details directly</p>

<form asp-action="Edit" asp-controller="Members" method="post">
@Html.AntiForgeryToken()
    <input type="hidden" asp-for="UserId" />
    <div class="card mb-4">
        <div-- class="card-body">
            <div class="mb-2">
                <label class="form-label"><strong>First Name:</strong></label>
                <input asp-for="FirstName" class="form-control" />
            </div>

            <div class="mb-2">
                <label class="form-label"><strong>Last Name:</strong></label>
                <input asp-for="LastName" class="form-control" />
            </div>

            <div class="mb-2">
                <label class="form-label"><strong>Personal Number:</strong></label>
                <input asp-for="PersonalNumber" class="form-control" />
            </div>

            <!--div class="mb-2">
                <label class="form-label"><strong>Role:</strong></label>
                <select asp-for="Role" class="form-select">
                    <option value="Admin" @(Model.Role == "Admin" ? "selected" : "")>Admin</option>
                    <option value="Member" @(Model.Role == "Member" ? "selected" : "")>Member</option>
                </select>
            </div-->

            <!--div class="mb-2">
                <label class="form-label"><strong>Membership:</strong></label>
                <select asp-for="MembershipType" class="form-select">
                    <option value="Pro" @(Model.MembershipType == "Pro" ? "selected" : "")>Pro</option>
                    <option value="Standard" @(Model.MembershipType == "Standard" ? "selected" : "")>Standard</option>
                </select>
            </div-->

            <div class="mb-2">
                <label class="form-label"><strong>Membership valid until:</strong></label>
                <input asp-for="MembershipValidUntil" type="date" class="form-control" />
            </div>

            <div class="mb-2">
                <label class="form-label"><strong>Email:</strong></label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="mb-2">
                <label class="form-label"><strong>Phone Number:</strong></label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-success"><i class="bi bi-save"></i> Save</button>
        <a asp-action="Details" asp-route-id="@Model.UserId" class="btn btn-outline-secondary">
            <i class="bi bi-x-circle"></i> Cancel
        </a>
    </div>
</form>