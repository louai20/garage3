@model garage3.Models.MemberDetailsVm

@{
    ViewData["Title"] = "Member Details";
}

<h1>@Model.FullName</h1>
<p class="text-muted">Detailed information about the selected member</p>

<div class="card mb-4">
    <div class="card-body">
        <p class="card-text mb-1"><strong>First Name:</strong> @Model.FirstName</p>
        <p class="card-text mb-1"><strong>Last Name:</strong> @Model.LastName</p>
        <p class="card-text mb-1"><strong>Personal Number:</strong> @Model.PersonalNumber</p>
        <p class="card-text mb-1"><strong>Role:</strong> @Model.Role</p>
        <p class="card-text mb-1">
            <strong>Membership:</strong>
            @if (Model.MembershipType == "Pro")
            {
                <span class="badge text-bg-success">@Model.MembershipType</span>
            }
            else
            {
                <span class="badge text-bg-info">@Model.MembershipType</span>
            }
        </p>
        <p class="card-text mb-1">
            <strong>Membership valid until:</strong>
            @(Model.MembershipValidUntil?.ToString("yyyy-MM-dd") ?? "-")
        </p>
        <p class="card-text mb-1"><strong>Email:</strong> @Model.Email</p>
        <p class="card-text mb-1"><strong>Phone Number:</strong> @Model.PhoneNumber</p>
        <p class="card-text mb-1"><strong>Created At:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</p>
        <p class="card-text mb-1">
            <strong>Lockout End:</strong> @(Model.LockoutEnd?.ToString("yyyy-MM-dd HH:mm") ?? "Not locked")
        </p>
        <p class="card-text mb-1"><strong>Total Vehicles:</strong> @Model.Vehicles.Count</p>
    </div>
</div>

<h4 class="mb-3">Registered Vehicles</h4>

@if (Model.Vehicles.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Registration Number</th>
                <th>Vehicle Type</th>
                <th class="text-center">Status</th>
                <th class="text-end">Active Parking Cost</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehicle in Model.Vehicles)
            {
                <tr>
                    <td>@vehicle.RegistrationNumber</td>
                    <td>@vehicle.VehicleType</td>
                    <td class="text-center">
                        @if (vehicle.IsParked)
                        {
                            <span class="badge text-bg-danger">
                                <i class="bi bi-car-front-fill"></i> Parked
                            </span>
                        }
                        else
                        {
                            <span class="badge text-bg-success">
                                <i class="bi bi-check-circle"></i> Not parked
                            </span>
                        }
                    </td>
                    <td class="text-end">
                        @vehicle.ActiveParkingCost.ToString("0.00") SEK
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="alert alert-info">
        This member has no registered vehicles.
    </div>
}

<div class="mt-4 d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-outline-warning">
        <i class="bi bi-pencil"></i> Edit
    </a>

    <form asp-action="Delete" asp-route-id="@Model.UserId" method="post" class="d-inline"
        onsubmit="return confirm('Are you sure you want to delete this member?');">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-outline-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
    </form>

    <a asp-action="Index" class="btn btn-outline-primary">
        <i class="bi bi-arrow-left"></i> Back
    </a>
</div>