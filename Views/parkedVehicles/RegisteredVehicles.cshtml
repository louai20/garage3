@model IEnumerable<garage3.Models.RegisteredVehicleViewModel>

@{
    ViewData["Title"] = "My Registered Vehicles";
}

<div class="container mt-4">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0 title">My Registered Vehicles</h1>
        <div class="d-flex gap-2">
            <a asp-action="Register" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Register New Vehicle
            </a>
            <a asp-controller="ParkingSpots" asp-action="Search" class="btn btn-primary">
                <i class="bi bi-car-front"></i> Park Vehicle
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> You currently have no registered vehicles.
            <a asp-action="Register" class="btn btn-success btn-sm ms-2">Register Your First Vehicle</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.RegistrationNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.VehicleTypeName)</th>
                        <th>@Html.DisplayNameFor(model => model.Manufacturer)</th>
                        <th>@Html.DisplayNameFor(model => model.Model)</th>
                        <th>@Html.DisplayNameFor(model => model.Color)</th>
                        <th>@Html.DisplayNameFor(model => model.IsParked)</th>
                        <th>@Html.DisplayNameFor(model => model.SpotNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.SpotSizeName)</th>
                        <th>@Html.DisplayNameFor(model => model.CheckInTime)</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.RegistrationNumber</strong></td>
                            <td>@item.VehicleTypeName</td>
                            <td>@item.Manufacturer</td>
                            <td>@item.Model</td>
                            <td>@item.Color</td>
                            <td>
                                @if (item.IsParked)
                                {
                                    <span class="badge bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </td>
                            <td>@(item.SpotNumber?.ToString() ?? "-")</td>
                            <td>
                                @if (item.SpotSize.HasValue)
                                {
                                    <span class="badge bg-@(item.SpotSize switch { 1 => "success", 2 => "warning", 3 => "danger", _ => "secondary"})">
                                        @item.SpotSizeName
                                    </span>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                            <td>@(item.CheckInTime?.ToString("g") ?? "-")</td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    @if (item.IsParked)
                                    {
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <i class="bi bi-info-circle"></i> Details
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <a asp-action="Checkout" asp-route-id="@item.Id" class="btn btn-sm btn-success">
                                            <i class="bi bi-box-arrow-right"></i> Checkout
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <a asp-controller="ParkingSpots" asp-action="Search" asp-route-vehicleTypeId="@item.VehicleTypeId" class="btn btn-sm btn-primary">
                                            <i class="bi bi-car-front"></i> Park
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Remove
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
