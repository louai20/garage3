@model garage3.Models.ParkedVehicleSelectVm

@{
    ViewData["Title"] = "Park Vehicle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Park Vehicle</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <strong>Spot Size:</strong> @ViewBag.SpotSize<br />
                        <strong>Allowed Vehicle Type:</strong> @ViewBag.AllowedVehicleTypeName
                    </div>

                    @if (Model.UserVehicles.Count == 0)
                    {
                        <div class="alert alert-warning">
                            <p>You don't have any registered vehicles of type <strong>@ViewBag.AllowedVehicleTypeName</strong>.</p>
                            <a asp-action="Register" class="btn btn-success">Register New Vehicle</a>
                        </div>
                    }
                    else
                    {
                        <form asp-action="Create" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <input type="hidden" asp-for="ParkingSpotId" value="@ViewBag.ParkingSpotId" />
                            <input type="hidden" asp-for="AllowedVehicleTypeId" value="@ViewBag.AllowedVehicleTypeId" />
                            <input type="hidden" asp-for="AllowedVehicleTypeName" value="@ViewBag.AllowedVehicleTypeName" />

                            <div class="mb-3">
                                <label asp-for="SelectedVehicleId" class="form-label">Select Your Vehicle</label>
                                <select asp-for="SelectedVehicleId" class="form-select" asp-items="Model.UserVehicles">
                                    <option value="">-- Select a Vehicle --</option>
                                </select>
                                <span asp-validation-for="SelectedVehicleId" class="text-danger"></span>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">Park Vehicle</button>
                                <a asp-action="Register" class="btn btn-success">Register New Vehicle</a>
                                <a asp-action="Search" asp-controller="ParkingSpots" class="btn btn-secondary">Cancel</a>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
