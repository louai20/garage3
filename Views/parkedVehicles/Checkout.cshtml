@model garage3.Models.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout Vehicle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="bi bi-box-arrow-right"></i> Confirm Checkout</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill"></i> Are you sure you want to checkout this vehicle?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.RegistrationNumber)</dt>
                        <dd class="col-sm-8"><strong>@Model.RegistrationNumber</strong></dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.SpotNumber)</dt>
                        <dd class="col-sm-8">@Model.SpotNumber</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.CheckInTime)</dt>
                        <dd class="col-sm-8">@Model.CheckInTime.ToString("g")</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.CheckOutTime)</dt>
                        <dd class="col-sm-8">@Model.CheckOutTime.ToString("g")</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Duration)</dt>
                        <dd class="col-sm-8">
                            @{
                                var duration = Model.Duration;
                                if (duration.TotalHours >= 1)
                                {
                                    @($"{(int)duration.TotalHours}h {duration.Minutes}m")
                                }
                                else
                                {
                                    @($"{duration.Minutes}m {duration.Seconds}s")
                                }
                            }
                        </dd>
                    </dl>

                    <form asp-action="CheckoutConfirmed" method="post">
                        <input type="hidden" name="vehicleId" value="@Model.VehicleId" />
                        @Html.AntiForgeryToken()

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-box-arrow-right"></i> Confirm Checkout
                            </button>
                            <a asp-action="UserParkedVehicles" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
